<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/maxresdefault"
        android:orientation="vertical"
        android:paddingBottom="50sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:paddingTop="50sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/my_border"
            android:text="@string/key_password"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_border"
                android:text="@string/title_key_password"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_border"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="35sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:background="#b5000000"
            android:hint="@string/password_require"
            android:textColor="#bcffffff"
            android:textColorHint="#7bffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDecrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c7fff700"
            android:text="@string/unlock"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/ivInvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/encryption" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#c7fff700"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/btn_main_menu"
        android:textSize="30sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</RelativeLayout>